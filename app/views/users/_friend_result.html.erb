<div class="results-block">
    <%= render 'layouts/messages' %>
</div>

<% if @friends %>
    <div class="card card-hearder results-block">
        <% @friends.each do |friend| %>
            <strong>Name: </strong> <%= friend.full_name %>
            <strong>Email: </strong> <%= friend.email %>
            <strong>Profile: </strong> <%= link_to "View Profile", '#', class: "btn btn-sm btn-success" %>
            <%= link_to 'Follow friend', user_friends_path(user: current_user, ticker: @frend.ticker), class: "btn btn-xs btn-success", data: {turbo_method: :post} %>
        <% end %>
    </div>
<% end %>